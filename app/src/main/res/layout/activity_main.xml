<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/main_IMG_backround"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        />

    <!-- Hearts -->
    <LinearLayout
        android:id="@+id/main_LAY_hearts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/default_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_IMG_heart1"
            android:layout_width="@dimen/heart_size"
            android:layout_height="@dimen/heart_size"
            android:layout_marginStart="@dimen/small_margin"
            android:src="@drawable/img_heart" />

        <ImageView
            android:id="@+id/main_IMG_heart2"
            android:layout_width="@dimen/heart_size"
            android:layout_height="@dimen/heart_size"
            android:layout_marginStart="@dimen/small_margin"
            android:src="@drawable/img_heart" />

        <ImageView
            android:id="@+id/main_IMG_heart3"
            android:layout_width="@dimen/heart_size"
            android:layout_height="@dimen/heart_size"
            android:layout_marginStart="@dimen/small_margin"
            android:src="@drawable/img_heart" />
    </LinearLayout>

    <!-- Grid area -->
    <LinearLayout
        android:id="@+id/main_LAY_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/main_LAY_car"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <!-- Row 0 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView android:id="@+id/main_IMG_cell_0_0"
                android:layout_width="@dimen/grid_cell_size"
                android:layout_height="@dimen/grid_cell_size"
                android:visibility="invisible"
                android:src="@drawable/img_obstacle" />

            <ImageView android:id="@+id/main_IMG_cell_0_1"
                android:layout_width="@dimen/grid_cell_size"
                android:layout_height="@dimen/grid_cell_size"
                android:visibility="invisible"
                android:src="@drawable/img_obstacle" />

            <ImageView android:id="@+id/main_IMG_cell_0_2"
                android:layout_width="@dimen/grid_cell_size"
                android:layout_height="@dimen/grid_cell_size"
                android:visibility="invisible"
                android:src="@drawable/img_obstacle" />
        </LinearLayout>

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView android:id="@+id/main_IMG_cell_1_0"
                android:layout_width="@dimen/grid_cell_size"
                android:layout_height="@dimen/grid_cell_size"
                android:visibility="invisible"
                android:src="@drawable/img_obstacle" />

            <ImageView android:id="@+id/main_IMG_cell_1_1"
                android:layout_width="@dimen/grid_cell_size"
                android:layout_height="@dimen/grid_cell_size"
                android:visibility="invisible"
                android:src="@drawable/img_obstacle" />

            <ImageView android:id="@+id/main_IMG_cell_1_2"
                android:layout_width="@dimen/grid_cell_size"
                android:layout_height="@dimen/grid_cell_size"
                android:visibility="invisible"
                android:src="@drawable/img_obstacle" />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView android:id="@+id/main_IMG_cell_2_0"
                android:layout_width="@dimen/grid_cell_size"
                android:layout_height="@dimen/grid_cell_size"
                android:visibility="invisible"
                android:src="@drawable/img_obstacle" />

            <ImageView android:id="@+id/main_IMG_cell_2_1"
                android:layout_width="@dimen/grid_cell_size"
                android:layout_height="@dimen/grid_cell_size"
                android:visibility="invisible"
                android:src="@drawable/img_obstacle" />

            <ImageView android:id="@+id/main_IMG_cell_2_2"
                android:layout_width="@dimen/grid_cell_size"
                android:layout_height="@dimen/grid_cell_size"
                android:visibility="invisible"
                android:src="@drawable/img_obstacle" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView android:id="@+id/main_IMG_cell_3_0"
                android:layout_width="@dimen/grid_cell_size"
                android:layout_height="@dimen/grid_cell_size"
                android:visibility="invisible"
                android:src="@drawable/img_obstacle" />

            <ImageView android:id="@+id/main_IMG_cell_3_1"
                android:layout_width="@dimen/grid_cell_size"
                android:layout_height="@dimen/grid_cell_size"
                android:visibility="invisible"
                android:src="@drawable/img_obstacle" />

            <ImageView android:id="@+id/main_IMG_cell_3_2"
                android:layout_width="@dimen/grid_cell_size"
                android:layout_height="@dimen/grid_cell_size"
                android:visibility="invisible"
                android:src="@drawable/img_obstacle" />
        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_IMG_cell_4_0"
                android:layout_width="@dimen/grid_cell_size"
                android:layout_height="@dimen/grid_cell_size"
                android:visibility="invisible"
                android:src="@drawable/img_obstacle" />

            <ImageView
                android:id="@+id/main_IMG_cell_4_1"
                android:layout_width="@dimen/grid_cell_size"
                android:layout_height="@dimen/grid_cell_size"
                android:visibility="invisible"
                android:src="@drawable/img_obstacle" />

            <ImageView
                android:id="@+id/main_IMG_cell_4_2"
                android:layout_width="@dimen/grid_cell_size"
                android:layout_height="@dimen/grid_cell_size"
                android:visibility="invisible"
                android:src="@drawable/img_obstacle" />
        </LinearLayout>
    </LinearLayout>

    <!-- Car row -->
    <LinearLayout
        android:id="@+id/main_LAY_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_IMG_car_0"
            android:layout_width="@dimen/car_size"
            android:layout_height="@dimen/car_size"
            android:src="@drawable/img_rocket"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/main_IMG_car_1"
            android:layout_width="@dimen/car_size"
            android:layout_height="@dimen/car_size"
            android:src="@drawable/img_rocket"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/main_IMG_car_2"
            android:layout_width="@dimen/car_size"
            android:layout_height="@dimen/car_size"
            android:src="@drawable/img_rocket"
            android:visibility="invisible" />
    </LinearLayout>

    <!-- Controls -->
    <Button
        android:id="@+id/main_BTN_left"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/default_margin"
        android:text="◀" />

    <Button
        android:id="@+id/main_BTN_right"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/default_margin"
        android:text="▶" />

</RelativeLayout>